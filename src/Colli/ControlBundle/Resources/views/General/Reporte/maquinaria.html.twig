<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th align="center"><h2>Nombre</h2></th>
      <th align="center"><h2>Numero</h2></th>
    </tr>
  </thead>
  <tbody>
    {% for item in maquinarias %}
      <tr>
        <td><h3>{{ item.descripcion }}</h3></td>
        <td><h3>{{ item.numero }}</h3></td>
      </tr>
    {% endfor %}
  </tbody>
</table>
<style>
  table, td, th {
    border: 1px solid black;
  }

  th {
    background-color: black;
    color: white;
  }
</style>